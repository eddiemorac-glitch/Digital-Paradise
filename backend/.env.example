PORT=3001
EMERGENCY_MODE=false
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password
DB_NAME=caribe_digital

# Security
# Generate a strong secret with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=change_me_to_a_long_random_string
JWT_EXPIRATION=15m

# AI
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=nvidia/nemotron-3-nano-30b-a3b:free

# TILOPAY Payment Gateway
TILOPAY_API_KEY=your_tilopay_api_key
TILOPAY_API_USER=your_tilopay_api_user
TILOPAY_API_PASSWORD=your_tilopay_api_password
TILOPAY_SANDBOX=true

# URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3001

# HACIENDA Integration
HACIENDA_API_KEY=your_hacienda_api_key
HACIENDA_BASE_URL=https://hacienda-core.vercel.app/api/v1
HACIENDA_SANDBOX=true
HACIENDA_IDP_USER=your_hacienda_idp_user@atv.hacienda.go.cr
HACIENDA_IDP_PIN=your_pin
HACIENDA_P12_BASE64=your_p12_base64_encoded_file
HACIENDA_P12_PIN=your_p12_pin

# Storage (Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Cache (Redis - Optional)
REDIS_URL=redis://default:password@host:port
